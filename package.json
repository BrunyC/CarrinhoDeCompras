{
	"name": "melicontrol-microservices",
	"version": "0.0.1",
	"description": "MeliControl Microservi√ßos",
	"author": "Bruno Cardoso",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"build:services": "cd melicontrol-microservices-docker && docker-compose up --no-start && cd ..",
		"start:services": "cd melicontrol-microservices-docker && docker-compose start && cd ..",
		"stop:services": "cd melicontrol-microservices-docker && docker-compose stop && cd ..",
		"start:service:rabbitmq": "cd melicontrol-microservices-docker && docker start melicontrol-rabbitmq-3.8.3 && cd ..",
		"stop:service:rabbitmq": "cd melicontrol-microservices-docker && docker stop melicontrol-rabbitmq-3.8.3 && cd ..",
		"build:microservices": "nest build api; nest build notification",
		"build:docker-compose": "docker compose build --no-cache",
		"build:docker": "docker build --no-cache --force-rm .",
		"lint:format": "eslint '{lib,microservices,config,api}/**/**/**/**/*.ts' --fix; prettier --write \"lib/**/**/**/**/*.ts\" \"api/**/**/**/*.ts\" \"config/**/**/**/*.ts\" \"microservices/**/**/**/**/*.ts\"",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"start": "pm2 start ecosystem.microservices.config.js",
		"start:dev": "pm2 start ecosystem.microservices.config.js; pm2 logs",
		"start:docker": "pm2-runtime start ecosystem.microservices.config.js",
		"stop:production": "env pm2 stop ecosystem.microservices.config.js; pm2 flush",
		"restart:production": "env pm2 restart ecosystem.microservices.config.js; pm2 flush",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:unit:cov": "jest --coverage --runInBand --detectOpenHandles --no-cache --config ./jest.config.ts",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
	},
	"dependencies": {
		"@nestjs/common": "^9.0.0",
		"@nestjs/config": "^2.3.2",
		"@nestjs/core": "^9.0.0",
		"@nestjs/microservices": "^9.4.2",
		"@nestjs/platform-express": "^9.0.0",
		"@nestjs/swagger": "^6.3.0",
		"amqp-connection-manager": "^4.1.13",
		"amqplib": "^0.10.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"helmet": "^7.0.0",
		"reflect-metadata": "^0.1.13",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^9.0.0",
		"@nestjs/schematics": "^9.0.0",
		"@nestjs/testing": "^9.0.0",
		"@types/express": "^4.17.13",
		"@types/jest": "28.1.8",
		"@types/node": "^16.0.0",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "28.1.3",
		"prettier": "^2.3.2",
		"supertest": "^6.1.3",
		"ts-jest": "28.0.8",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.1.0",
		"typescript": "^4.7.4"
	},
	"_moduleAliases": {
		"@lib/dto/microservice/notification": "lib/src/dto/microservices/notification",
		"@lib/enum": "lib/src/enum",
		"@lib/type": "lib/src/type",
		"@lib": "lib/src",
		"@config": "config/services",
		"@api": "api/src",
		"@notification": "microservices/notification"
	},
	"_moduleDirectories": [
		"node_modules"
	]
}
