{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "monorepo": true,
  "root": "apps/api",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json"
  },
  "projects": {
		"api": {
			"type": "application",
			"root": "api",
			"entryFile": "main",
			"sourceRoot": "api/src",
			"compilerOptions": {
				"tsConfigPath": "api/tsconfig.app.json"
			}
		},
		"notifications": {
			"type": "application",
			"root": "microservices/notifications",
			"entryFile": "main",
			"sourceRoot": "microservices/notifications/src",
			"compilerOptions": {
				"tsConfigPath": "microservices/notifications/tsconfig.app.json"
			}
		}
	}
}
