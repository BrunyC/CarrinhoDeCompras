{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "ES2020"
    ],
    "target": "ES2020",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@api/*": [
        "api/src/*"
      ],
      "@config/*": [
        "config/services/*"
      ],
      "@lib/dto/general/*": [
        "lib/src/dto/general/*"
      ],
      "@lib/dto/api/*": [
        "lib/src/dto/api/*"
      ],
      "@lib/dto/microservices/user/*": [
        "lib/src/dto/microservices/user/*"
      ],
      "@lib/dto/microservices/product/*": [
        "lib/src/dto/microservices/product/*"
      ],
       "@lib/dto/microservices/product_price/*": [
        "lib/src/dto/microservices/product_price/*"
      ],
      "@lib/dto/microservices/cart/*": [
        "lib/src/dto/microservices/cart/*"
      ],
      "@lib/dto/microservices/checkout/*": [
        "lib/src/dto/microservices/checkout/*"
      ],
      "@lib/pipes/*": [
        "lib/src/pipes/*"
      ],
      "@lib/enum/*": [
        "lib/src/enum/*"
      ],
      "@lib/type/*": [
        "lib/src/type/*"
      ],
      "@lib/helper/*": [
        "lib/src/helper/*"
      ],
      "@product/*": [
        "microservices/product/src/*"
      ],
      "@product_price/*": [
        "microservices/product_price/src/*"
      ],
      "@user/*": [
        "microservices/user/src/*"
      ],
      "@cart/*": [
        "microservices/cart/src/*"
      ],
      "@checkout/*": [
        "microservices/checkout/src/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
